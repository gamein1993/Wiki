package com.kiprogram.utilities.db.sql;

import android.database.sqlite.SQLiteDatabase;

import com.kiprogram.utilities.db.table.KiTable;

import java.util.ArrayList;

public class KiSql {
    private SQLiteDatabase db;
    private String sql;
    private ArrayList<Param> params;

    public KiSql(SQLiteDatabase db) {
        this.db = db;
        this.sql = "";
        this.params = new ArrayList<>();
    }

    public KiSql(SQLiteDatabase db, CharSequence sql) {
        this.db = db;
        this.sql = sql.toString();
        this.params = new ArrayList<>();
    }

    public KiSql(SQLiteDatabase db, CharSequence sql, ArrayList<Param> params) {
        this.db = db;
        this.sql = sql.toString();
        this.params = params;
    }

    public void setSql(CharSequence sql) {
        this.sql = sql.toString();
    }

    public void addParam(KiTable.Column.Type type, String value) {
        params.add(new Param(type, value));
    }

//    public Cursor exec() { TODO
//
//    }

    private class Param {
        private KiTable.Column.Type type;
        private String value;

        private Param(KiTable.Column.Type type, String value) {
            this.type = type;
            this.value = value;
        }
    }
}
