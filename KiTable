package com.kiprogram.utilities.db.table;

import android.database.sqlite.SQLiteDatabase;

import com.kiprogram.utilities.db.helper.KiSQLite;

import java.util.HashMap;

public abstract class KiTable {
    public static class Column {
        public enum Type {
            TEXT("TEXT"),
            NUMERIC("NUMERIC"),
            INTEGER("INTEGER"),
            REAL("REAL"),
            NONE("NONE");

            private String type;

            Type(String type) {
                this.type = type;
            }

            private String getText() {
                return this.type;
            }
        }

        private String name;
        private Type type;
        private boolean primary;

        public Column(String name, Type type, boolean primary) {
            this.name = name;
            this.type = type;
            this.primary = primary;
        }
    }

    private SQLiteDatabase db;
    private String name;
    private Column[] columns;
    private String[] values;

    public KiTable(KiSQLite sqLite, String name, Column[] columns) {
        db = sqLite.getWritableDatabase();
        this.name = name;
        this.columns = columns;
    }

    public KiTable(KiSQLite sqLite, String name, Column[] columns, HashMap<String, String> keys) {
        db = sqLite.getWritableDatabase();
        this.name = name;
        this.columns = columns;
    }

    private void setValues(HashMap<String, String> keys) {

    }



}
